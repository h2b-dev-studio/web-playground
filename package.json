{
  "name": "web-playground",
  "version": "1.0.0",
  "description": "웹 기술을 탐색하고 실험하기 위한 개인 공간입니다.",
  "private": true,
  "scripts": {
    "build": "pnpm -r run build",
    "build:entry": "pnpm --filter entry run build",
    "build:react": "pnpm --filter react-sample run build",
    "build:preact": "pnpm --filter preact-sample run build",
    "build:next": "pnpm --filter next-sample run build",
    "build:express": "pnpm --filter express-sample run build",
    "build:nest": "pnpm --filter nest-sample run build",
    "dev": "pnpm -r run dev",
    "dev:entry": "pnpm --filter entry run dev",
    "dev:react": "pnpm --filter react-sample run dev",
    "dev:preact": "pnpm --filter preact-sample run dev",
    "dev:next": "pnpm --filter next-sample run dev",
    "dev:express": "pnpm --filter express-sample run dev",
    "dev:nest": "pnpm --filter nest-sample run dev",
    "clean": "rm -rf dist && pnpm -r run clean",
    "test": "pnpm -r run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:codegen": "playwright codegen http://localhost:5173"
  },
  "keywords": [
    "monorepo",
    "entry",
    "react",
    "preact",
    "next",
    "express",
    "nest"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.19.0",
  "devDependencies": {
    "@playwright/test": "^1.56.1"
  }
}
